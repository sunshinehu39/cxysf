/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.hidden{
  display: none;
}

/* 微信头像 */
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 120rpx;  
  height: 120rpx;  
  margin: 50rpx ;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

/* 底部导航 */
.bottom{
  position: fixed;
  bottom: 0;
  justify-content: center;
  width: 100%;
}

/* view横向排列 */
.x {
  display: flex;
  flex-direction: row;
}

/* view纵向排列 */
.y{
  display: flex;
  flex-direction: column;
}

/* view内元素垂直居中 */
.ycenter{
  align-items:center;
}

/* view内元素水平居中 */
.xcenter{
  justify-content: center;
}

form {
    width: 100%;
    /* margin: 30rpx; */
}

/* 标题 */
.title {
  font-weight: bold;
  margin: 30rpx 0;
  justify-content: center;
}


/* 文字水平居中 */
.tcenter {
  text-align: center;
}

/* 圆按钮-绿底白字 */
.cirbutton {
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  margin: 20rpx;
  font-size: 90rpx;
  line-height: 150rpx;
  background: rgb(19, 170, 64);
  color: white;
}

/* 被选中 */
.active {
  background: rgb(19, 170, 64);
  color: white;
}

/* 底部导航的样式 */
.bottom{
  position: fixed;
  bottom: 0;
  justify-content: center;
  width: 100%;
  display: flex;
  flex-direction: row;
}

/* 底部导航按钮的样式 */
.tabar {
  width: 25%;
  border-radius: 0rpx;
}

/* 去掉按钮圆角 */
button::after {
    border-radius: 0;
}

/* 右下角绿底白字悬浮按钮 */
.float {
  position: fixed;
  bottom: 15%;
  right: 5%;
  border-radius:circle;
  color: rgb(19, 170, 64);
  font-size: 110rpx;
}

/* 按钮内文字的样式 */
.bnttext{
  font-size: 50rpx;
  color: white;
  line-height: 120rpx;
  position:relative;
  top:-40rpx;
}

/* 边框无圆角 */
.noradius {
  border-radius: 0rpx;
}

/* 列表 */
.box {
  margin-left: 30rpx;
  margin-top: 10rpx;
  vertical-align:middle;
}

.item {
  margin: 0rpx 0 0 20rpx;
}

.del {
  margin: -4rpx 0 0 20rpx;
  font-size: 40rpx;
}

.highlight {
